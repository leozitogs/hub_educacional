# ── Aplicação ──────────────────────────────────────────────────────────
APP_NAME="Hub Inteligente de Recursos Educacionais"
APP_VERSION="1.0.0"
DEBUG=true

# ── Banco de Dados (PostgreSQL) ────────────────────────────────────────
# Formato: postgresql+asyncpg://usuario:senha@host:porta/nome_do_banco
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/hub_educacional

# ── Google Gemini AI ───────────────────────────────────────────────────
# Obtenha sua chave em: https://aistudio.google.com/apikey
# Se não configurada, o sistema usará respostas mock para demonstração.
GEMINI_API_KEY=sua_chave_gemini_aqui
GEMINI_MODEL=gemini-2.0-flash

# ── CORS (Origens permitidas, separadas por vírgula) ──────────────────
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ── Paginação ─────────────────────────────────────────────────────────
PAGE_SIZE=10
